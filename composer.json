{
  "name": "potager/pixie",
  "description": "A lightweight, expressive, framework agnostic query builder for PHP.",
  "homepage": "https://github.com/theo-vdml/pixie",
  "keywords": [
    "query builder",
    "sql",
    "database",
    "mysql",
    "postgresql",
    "sqlite"
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Muhammad Usman",
      "email": "hi@usman.it",
      "role": "Developer"
    },
    {
      "name": "Pavel Puchkin",
      "email": "i@neoascetic.me",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.0.0"
  },
  "autoload": {
    "psr-0": {
      "Pixie": "src/"
    }
  },
  "require-dev": {
    "pestphp/pest": "4.x-dev"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
